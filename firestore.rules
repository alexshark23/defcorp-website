rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // User profiles: Only owner can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Projects/Leads: Owner can read/write, admins can read
    match /leads/{leadId} {
      allow create: if true; // Allow anyone to submit a lead (contact form)
      allow read, write: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
    }
    
    // System status: Publicly readable, admin only write
    match /systemStatus/{statusId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
